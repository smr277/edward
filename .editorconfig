# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*.cc]
indent_style = space
indent_size = 2

# 2 space indentation
[*.h]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[BUILD]
indent_style = tab
indent_size = 4
